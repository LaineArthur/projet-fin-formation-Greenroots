<%- include('partials/header') %>

<main class="is-flex-grow-1 mb-6">
<div class="buttons_profil navbar-desktop">
        
    <a href="/profil/"><button class="button_infos" type="submit">Mes informations</button></a>
    <a href="/profil/mes-commandes"><button class="button_order" type="submit">Mes commandes</button></a>
    <a href="/profil/favoris"><button class="button_fav" type="submit">Mes favoris</button></a>
    
</div>

<hr class="navbar_end navbar-desktop">


    <h1 class="title-page my-2 has-text-centered has-text-centered-desktop has-text-weight-semibold mb-6">Ma commande n° <%= command.id %></h1>
    
    <section>

        <% command.trees.forEach(tree => { %>
         
            <article class=" p-5 mb-6">
                <h2 class="has-text-centered mb-3 is-underlined has-text-weight-semibold"><%= tree.name %></h2>
                <a href="/nos-arbres/<%= tree.slug %>"> <img class="mb-5" src="/public/images/photos/<%= tree.image %>" alt="Photo d'un <%= tree.name %>"></a>
                <div class="has-text-centered  has-text-dark">
                    <p><span class="has-text-weight-semibold">Variété : </span><%= tree.variety.name %></p>
                    <p><span class="has-text-weight-semibold">Taille : </span><%= tree.size %></p>
                    <p><span class="has-text-weight-semibold">Quantité : </span><%= tree.CommandHasTree.quantity %></p>
                    <p><span class="has-text-weight-semibold">Prix TTC : </span><%= tree.price_ttc %> €</p>
                </div>
    
                <a href="/nos-arbres/<%= tree.slug %>"><button class="button-buy">Acheter à nouveau</button></a>
                
            </article>
        <% }) %>

        

        
        
    </section>
    <a href="/profil/mes-commandes"><button class="button-back mt-6">Mes commandes</button></a>
    
</main>

<%- include('partials/footer') %>